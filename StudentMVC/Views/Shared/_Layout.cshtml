<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <title>Students System</title>


    <style>

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            /* Margin bottom by footer height */
            margin-bottom: 60px;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            /* Set the fixed height of the footer here */
            height: 60px;
            line-height: 60px; /* Vertically center the text there */
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>


    @Html.Partial("_Navigation")

    <header>

        @* If a view has a header section we use it otherwise we render the defult site header. *@
        @if (IsSectionDefined("header"))
        {
            @*An optional section. *@
            @RenderSection("header", false)
        }
        else
        {
            // We don't want any header. Just empty.
        }

    </header>


    <div class="container mt-3">
        <div class="row">
            @{ /*
                @**@<div class="col-md-3">
                    <aside>
                        @* To render a ViewComponent. Must use await *@
                        @*@await Component.InvokeAsync("TopSubjects") // You could use this method or the generic method*@
                       @* @await (Component.InvokeAsync<StudentsApp.ViewComponents.TopSubjectsViewComponent>())*@
                    </aside>
                </div>
                */
            }
            <div class="col-md-8 offset-md-2">

                <main>
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                @* Main body used by extending views *@
                                @RenderBody()

                            </div>
                        </div>
                    </div>
                </main>

            </div>
        </div>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <span class="text-muted">Copyrights &copy; Hamoud Alhoqbani @DateTime.Now.Year</span>
        </div>
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="/js/app.js"></script>
</body>

</html>
