@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model StudentMVC.Models.Student
@* For more information on enabling
    MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860 *@
@{
    Layout = "_Layout";
}
@section header { }

<div class="container mt-5">
    <div class="row my-1">
        <div class="col-12">

            <form asp-controller="Students" asp-action="Edit" method="post">
                <div class="card mb-5" style="width: 100%;">
                    <div class="card-header h3">Edit @Model.Name details</div>

                    <div class="card-body">
                        <img class="rounded-circle mx-auto d-block" src="@Model.Avatar()" />

                        <hr />
                        <div class="text-danger">
                            @Html.ValidationSummary()
                        </div>

                        <div class="card-text">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label asp-for="Name">Name</label>
                                        <input asp-for="Name" type="text" class="form-control">
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Email">Email address</label>
                                        <input asp-for="Email" type="email" class="form-control">
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="City">City</label>
                                        <input asp-for="City" type="text" class="form-control">
                                    </div>

                                </div>
                                <div class="col-md-6 text-md-right">
                                    <div class="form-group">
                                        <label asp-for="Age">Age</label>
                                        <input asp-for="Age" type="number" class="form-control">
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Gender">Gender</label>
                                        <select asp-for="Gender" class="form-control">
                                            <option name="Male" selected>Male</option>
                                            <option name="Female">Female</option>
                                        </select>
                                    </div>

                                    <div class="form-check">
                                        <input asp-for="Enrolled" class="form-check-input" type="checkbox">
                                        <label asp-for="Enrolled" class="form-check-label">
                                            Enrolled?
                                        </label>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-warning btn-block">تعديل</a>
                            </div>
                            <div class="col-md-6 text-center">
                                <a href="@Url.Action("Show", "Students", new { id = Model.Id }) " class="btn btn-link text-danger">إلغاء</a>
                            </div>
                        </div>
                    </div>


                </div>
            </form>

        </div>
    </div>
</div>